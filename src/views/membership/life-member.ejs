<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="/images/fav_icon.webp" type="image/png" />
    <title>Society of Economic Geologists & Mineral Technologists</title>
    <link rel="stylesheet" href="/css/home.css" />
    <link rel="stylesheet" href="/css/main.css" />
  </head>
  <body>
    <%- include("../components/header") %>

    <div class="sm:px-4 py-6 px-2">
      <main class="container mx-auto">
        <!-- Current Page Navigate -->
        <div class="p-4 shadow-sm rounded-sm bg-white flex gap-2 uppercase font-medium text-sm">
          <a href="/" class="cursor-pointer hover:text-[#85082b]">Home</a> / <a href="/membership" class="cursor-pointer hover:text-[#85082b]">Membership</a> /
          <a href="/membership/life-member" class="cursor-pointer hover:text-[#85082b]">life Member</a>
        </div>

        <!-- About Us -->
        <div class="mt-6 bg-white rounded-sm md:p-8 p-4 shadow-xs">
          <section>
            <h1 class="text-[#85082b] font-semibold xl:text-2xl text-xl mb-2">Life Members</h1>
            <p>The Life Members of the Society of Economic Geologists and Mineral Technologists:</p>
            <div id="display-life-members" class="grid mt-6"></div>
          </section>
        </div>
      </main>
    </div>

    <!-- Footer -->
    <%- include("../components/footer") %>

    <script>
      let life_members = ["member1", "member2", "member3", "member4", "member5", "member6"];
      const displayLifeMembers = document.getElementById("display-life-members");
      life_members.forEach((each, index) => {
        if (life_members.length == index + 1) {
          let html = `<div class="flex border border-[#333]">
                <div class="shrink-0 min-w-20 max-w-40 p-2 border-r border-[#333]">${index + 1}</div>
                <div class="w-full p-2 capitalize">${each}</div>
              </div>`;
          displayLifeMembers.insertAdjacentHTML("beforeend", html);
          return;
        }
        let html = `<div class="flex border border-[#333] border-b-transparent">
                <div class="shrink-0 min-w-20 max-w-40 p-2 border-r border-[#333]">${index + 1}</div>
                <div class="w-full p-2 capitalize">${each}</div>
              </div>`;
        displayLifeMembers.insertAdjacentHTML("beforeend", html);
      });
    </script>
  </body>
</html>
